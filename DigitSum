public class Solution {
    public bool ValidMountainArray(int[] arr) {
        if (arr.Length < 3) return false;

        var prev = arr[0];
        var up = false;
        var down = false;
        for (int i = 1; i < arr.Length; i++) {
            var num = arr[i];
            // Đang đi lên
            if (num > prev) {
                // Nếu chưa đi lên lần nào => gán true
                if (!up) {
                    up = true;
                } 
                // Nếu đã xuống rồi mà lại lên => false
                else if (down) {
                    return false;
                }
            } 
            // Đi xuống
            else if (num < prev) {
                // Chưa lên mà đã xuống => false
                if (!up) {
                    return false;
                }
                // Nếu chưa đi xuống lần nào => gán true
                else if (!down) {
                    down = true;
                }
            }
            // Đi ngang => false
            else {
                return false;
            }
            prev = num;
        }
        return up && down;
    }
}
